<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title Text -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Patient Data"
        android:textSize="20sp"
        android:layout_marginBottom="32dp"
        android:textColor="@color/black"
        android:gravity="center" />

    <!-- Upload Button -->
    <Button
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose CSV File"
        android:layout_marginBottom="16dp"/>

    <!-- Download Result Button -->
    <Button
        android:id="@+id/download_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Results"
        android:layout_marginTop="16dp"
        android:visibility="gone"/> <!-- Initially hidden until upload is complete -->

    <!-- Disorder and Confidence Results -->
    <TextView
        android:id="@+id/disorder_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predicted Disorder: N/A"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/confidence_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confidence: N/A"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black" />
</LinearLayout>
